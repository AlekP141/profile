      scale: 1.00,
      scaleMobile: 1.00,
      backgroundColor: "#151515",
      color1: "#f146ab",
      color2: "#f146ab",
      wingSpan: 20.00,
      speedLimit: 4.00,
      separation: 35.00,
      alignment: 30.00,
      cohesion: 10.00,
      quantity: 2.00,
    })
  </script>

